@model IEnumerable<TravelExperts.Models.ViewModel.CardVM>

@{
    ViewData["Title"] = "Package Page";
}

<!--Written by Ben Wood-->
<!--This page is the main page for the packages. It displays a carousel of packages and a list of packages below it.-->
<!--The carousel is a partial view that is included in the page.
The list of packages is generated by a foreach loop that creates a partial view for each package.-->
<style>

    .glass {
        background: rgba(240,173,78,0.75);
        -webkit-backdrop-filter: blur(1px);
        backdrop-filter: blur(1px);
        border: 1px solid rgba(240,173,78,0.375);
        padding: 2rem;
        border-radius: 2rem;
    }
</style>

<!--Displays the packages in a slideshow-->
<main class="glass">
    <div class="container">
        <div class="row">
            <div class="col align-self-center">
                <h1>Travel Experts Packages</h1>
                <p>
                    See available packages below or select one from the slideshow!
                </p>
            </div>
            <div class="col align-self-end text-center">
                <partial name="_PackageCarouselPartial" />
            </div>
        </div>


    </div>

    <!--Displays the packages as cards-->
    <div class="container">

        <div class="row">
            <div class="col">
                <h2>Current Packages</h2>
                <p class="my-2 text-black-50">
                    Travel Experts offers a wide range of travel packages for our customers to enjoy.
                    Select one of the packages below to learn more about the details and pricing.
                </p>
            </div>
            <div class="col">

                <div class="d-flex gap-3 justify-content-center">
                    @foreach (var card in Model)
                    {
                        @Html.Partial("_PackageCardPartial", card)
                        
                    }
                </div>

            </div>
        </div>
    </div>


</main>