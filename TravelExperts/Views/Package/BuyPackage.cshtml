@model TravelExperts.DataAccess.Models.ViewModel.BuyPackageViewModel

@{
    ViewData["Title"] = "Buy package";

}

<h1>Purchase Package</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="BuyPackage" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="PackageId" value="@ViewBag.PackageId" />

            <div class="form-group">
                <label asp-for="TravelerCount" class="control-label">Please enter your traveler count</label>
                <input asp-for="TravelerCount" class="form-control" />
                <span asp-validation-for="TravelerCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select name="TripTypeId" asp-Items="@ViewBag.TripTypeLetter" class="control-label">Please select your trip type</select>
                <input asp-for="TripTypeId" class="form-control" />
                <span asp-validation-for="TripTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Buy Package" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to packages</a>
</div>
